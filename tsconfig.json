{
  "extends": "@tsconfig/react-native/tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@assets": ["src/assets/*"],
      "tests": ["tests/*"],
      "@screens/*": ["src/screens/*"],
      "@components/*": ["src/components/*"],
      "@models/*": ["src/models/*"],
      "@api/*": ["src/api/*"],
      "@shared/*": ["src/shared/*"],
      "@transformations/*": ["src/transformations/*"],
      "@navigation/*": ["src/navigation/*"],
    },
  }
}
